<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.schoolsystem.dao.CourseMapper">
    <select id="getCourseInfoById" resultType="com.schoolsystem.pojo.Course">
        select *
        from course_info
        where id in
        <foreach collection="courseIds" item="courseId" open="(" separator="," close=")">
            #{courseId}
        </foreach>
    </select>
    
</mapper>